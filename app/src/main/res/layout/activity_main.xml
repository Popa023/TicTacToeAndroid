<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="8dp" app:layout_constraintDimensionRatio="w,1:1"
            android:onClick="buttonTapped"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/button3"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/button1"
            android:layout_marginStart="8dp" app:layout_constraintDimensionRatio="w,1:1"
            android:onClick="buttonTapped"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="8dp" app:layout_constraintDimensionRatio="w,1:1"
            android:onClick="buttonTapped"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button5" android:layout_marginEnd="8dp"
            app:layout_constraintDimensionRatio="1:1" android:onClick="buttonTapped"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button6"
            android:layout_marginEnd="8dp" app:layout_constraintDimensionRatio="1:1" android:onClick="buttonTapped"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginStart="8dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button3"
            android:onClick="buttonTapped"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button7" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintEnd_toStartOf="@+id/button8" android:layout_marginEnd="8dp"
            app:layout_constraintDimensionRatio="w,1:1" android:onClick="buttonTapped"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button8" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button5" app:layout_constraintEnd_toStartOf="@+id/button9"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginStart="8dp" app:layout_constraintDimensionRatio="w,1:1"
            android:onClick="buttonTapped"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button9" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/button8" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintDimensionRatio="w,1:1" android:onClick="buttonTapped"/>
    <Button
            android:text="Reset"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/reset"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button8" app:layout_constraintEnd_toStartOf="@+id/owin"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/xwin"
            android:layout_marginStart="8dp" app:layout_constraintDimensionRatio="1:1" android:onClick="buttonTapped"/>
    <TextView
            android:text="X Wins : "
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/xwin" app:layout_constraintEnd_toStartOf="@+id/reset" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button7"
            app:layout_constraintDimensionRatio="w,1:1"/>
    <TextView
            android:text="0 Wins : "
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/owin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/reset"
            android:layout_marginStart="8dp" app:layout_constraintDimensionRatio="1:1"/>
</android.support.constraint.ConstraintLayout>